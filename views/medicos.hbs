<table border="solid">
  <h2>LISTADO DE MEDICOS</h2>
  <thead>
    <tr>
      <th>CÃ©dula</th>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Especialidad</th>
      <th>Consultorio</th>
      <th>Correo</th>
    </tr>
  </thead>
  <tbody>
    {{#each medicos}}
    <form method="post" action="/medicos/actualizar/{{cedula}}">
      <tr>
        <td><input id="cedula" value="{{cedula}}" disabled></td>
        <td><input id="nombres" name="nombres" value="{{nombres}}" {{../opcion}}></td>
        <td><input id="apellidos" name="apellidos" value="{{apellidos}}" {{../opcion}}></td>
        <td><input id="especialidad" name="especialidad" value="{{especialidad}}" {{../opcion}}></td>
        <td><input id="consultorio" name="consultorio" value="{{consultorio}}" {{../opcion}}></td>
        <td><input id="correo" name="correo" value="{{correo}}" {{../opcion}}></td>
        <td>
          {{#if ../activo}}
          <a class="eliminar" href="medicos/eliminar/{{cedula}}">Eliminar</a>
          <a class="editar" href="/medicos/activar">Editar</a>
          {{else}}
          <input type="submit" value="Enviar">
          {{/if}}
          </td>
          </form> 
      </tr>
    {{/each}}
  </tbody>
</table>
